<div class="row">
  <div class="col-md-6">
    <h3>My recent activity</h3>
    <% @my_commits.each do |msg, repo| %>
      <p>"<%= msg %>" commit added to <%= repo %><br/>
    <% end %>
  </div>
  <div class="col-md-6">
    <h3>Public activities</h3>
    <% @following_activity.each do |activity| %>
      <p><strong><%= activity[:actor][:login] %></strong> performed a <em><%= activity[:type] %></em> on <%= activity[:repo][:name] %> at <%= activity[:created_at] %></p>
    <% end %>
  </div>
</div>
