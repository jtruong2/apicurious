<img class="avatar" src="<%= current_user["avatar_url"] %>">
<ul>
  <li>username: <%= current_user.username %></li>
  <li>name: <%= current_user.name %></li>
  <li>user id: <%= current_user.uid %></li>
  <li>email: <%= current_user.email %></li>
</ul>

<p><strong>Followers(<%= @results[:followers] %>)</strong></p>
<% @followers.each do |user| %>
  <%= image_tag(user[:avatar_url], :class => "followers") %>
  <p><%= user[:login] %></p>
<% end %>

<p><strong>Following(<%= @results[:following] %>)</strong></p>
<% @following.each do |user| %>
  <%= image_tag(user[:avatar_url], :class => "following") %>
  <p><%= user[:login] %></p>
<% end %>

<p>Number of public repos: <%= link_to @results[:public_repos], myrepos_path %></p>
<p>Number of public gists: <%= @results[:public_gists] %></p>
<p>Number of starred repos: <%= @starred_repos.count %></p>
